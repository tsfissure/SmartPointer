template<typename T>
class SmartPointer {
public:
	explicit SmartPointer(T* p = nullptr);
	SmartPointer(const SmartPointer &ref);
	~SmartPointer();

public:
	T*					getRefObject()const;
	bool				isNull();

public:
	SmartPointer<T>&	operator = (const SmartPointer &rkNode);
	bool				operator==(const SmartPointer &rkNode);
	T*					operator->()const;
	T&					operator()()const;
	T&					operator*()const;
